<div class="container">
    <div class="col">
        <div class="list-name">New Tasks</div>
        <% Task.where(status: 'new').each do |task| %>
            <ul class="column-wrapper" id="col_1"> 
                <li class="card tile"> 
                    <div class="task"><strong>Description:</strong> <%= task.description %>
                        <div class="task"><strong>Pickup:</strong> <%= task.pickup_loc %></div><div class="task" style="padding-top: 0;"><strong>Deliver:</strong> <%= task.deliver_loc %></div>
                    </div>
                    <i class="js-remove"><%= link_to 'âœ–', task, method: :delete, data: { confirm: 'Are you sure?' }, style: "color: darkred;" %></i>
                </li>
                
            </ul>
        <% end %>
        <%= link_to 'New Task', new_task_path %><a class="save disabled" href="#">Save</a><a class="cancel" href="#">Cancel</a>
    </div>
    <div class="col">
        <div class="list-name">Assigned</div>
        <% Task.where(status: 'assigned').each do |task| %>
            <ul class="column-wrapper" id="col_2">
                <li class="card tile"> 
                    <div class="task"><strong>Description:</strong> <%= task.description %>
                        <div class="task"><strong>Pickup:</strong> <%= task.pickup_loc %></div><div class="task" style="padding-top: 0;"><strong>Deliver:</strong> <%= task.deliver_loc %></div>
                        <div class="task" style="padding-top: 0;"><strong>Assigned:</strong> <%= Driver.find(task.driver_id).email %></div>
                </li>
            </ul>
        <% end %>
                    </div>
                    <div class="col"> 
                        <div class="list-name">Done</div>
                        <% Task.where(status: 'done').each do |task| %>
                            <ul class="column-wrapper" id="col_4">
                                <li class="card tile"> 
                                    <div class="task"><strong>Description:</strong> <%= task.description %>
                                        <div class="task"><strong>Pickup:</strong> <%= task.pickup_loc %></div><div class="task" style="padding-top: 0;"><strong>Deliver:</strong> <%= task.deliver_loc %></div><div class="task" style="padding-top: 0;"><strong>Done By:</strong> <%= Driver.find(task.driver_id).email %></div>
                                </li>
                            </ul>
                        <% end %>
                                    </div>
                    </div>
